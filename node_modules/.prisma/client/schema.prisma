generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String   @unique
  flows     Flow[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Flow {
  id        String   @id @default(uuid())
  flowId    String
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id             String       @id @default(uuid())
  role           String
  text           String
  createdAt      DateTime     @default(now())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model Conversation {
  id        String    @id @default(uuid())
  phone     String    @unique
  messages  Message[]
  createdAt DateTime  @default(now())
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
